<h1>Store an image</h1>
<%= form_for(@image, url: images_path, html: { class: 'form-group'} ) do |f| %>
  <% if @image.errors.any? %>
    <ul class="help-block">
      <% @image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :tag_list %>
  <%= f.text_field :tag_list, value: f.object.tag_list.to_s %>

  <%= f.submit "Save image URL" %>
<% end %>
